#all queries for  chat messages
input ConversationRequest {
	user1: ID!
	user2: ID!
}

type Query {
	allUserConversations(id: ID): [Conversation]
	conversationById(id: ID): Conversation
	allConversations: [Conversation]
}

type Mutation {
	createConversation(request: ConversationRequest): Conversation
	addMessageToConversation(message: String, conversationId: ID, sender: ID): Message
}
